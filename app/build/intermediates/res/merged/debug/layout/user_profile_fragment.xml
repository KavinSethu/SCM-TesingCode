<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F68C19">

    <ScrollView
        android:id="@+id/scrollMain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/mainTop"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:background="#DDDDDD">

                <RelativeLayout
                    android:id="@+id/backLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="1sp"
                    android:background="#E9E9E9"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/Back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Back"
                        android:textColor="#898989" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_margin="1sp"
                    android:layout_toLeftOf="@+id/backRight"
                    android:layout_toRightOf="@+id/backLeft"
                    android:background="#E9E9E9">

                    <TextView
                        android:id="@+id/txtForCurrentDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="2016-06-25"
                        android:textColor="#898989"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/backRight"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="1sp"
                    android:background="#E9E9E9"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/Next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Next"
                        android:textColor="#898989" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutForStudentDetail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainTop"
                android:background="#E88418"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/layoutForUserImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#E88418">

                    <ImageView
                        android:id="@+id/imgForUserImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/manjit" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btnForEditProfile"
                    android:layout_width="60dp"
                    android:layout_height="26dp"
                    android:layout_below="@+id/layoutForUserImage"
                    android:layout_marginTop="3dp"
                    android:background="@color/btn_white_trans"
                    android:padding="2dp"
                    android:text="Edit"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/txtForUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@+id/layoutForUserImage"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtForGuardian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtForUserName"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="5sp"
                    android:layout_toRightOf="@+id/layoutForUserImage"
                    android:text="Guardians"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/layoutForGuardian1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtForGuardian"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@+id/layoutForUserImage"
                    android:background="#D97A13">

                    <TextView
                        android:id="@+id/txtForGuardian1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3sp"
                        android:layout_marginTop="5sp"
                        android:padding="1sp"
                        android:textColor="#fff"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/contact1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3sp"
                        android:layout_marginTop="5sp"
                        android:padding="1sp"
                        android:textColor="#fff"
                        android:textSize="13sp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutForGuardian2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutForGuardian1"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/layoutForUserImage"
                    android:background="#D97A13">

                    <TextView
                        android:id="@+id/txtForGuardian2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3sp"
                        android:layout_marginTop="5sp"
                        android:padding="1sp"
                        android:textColor="#fff"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/contact2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3sp"
                        android:layout_marginTop="5sp"
                        android:padding="1sp"
                        android:textColor="#fff"
                        android:textSize="13sp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutForAbsenceNotes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutForStudentDetail"
                android:layout_marginTop="10dp"
                android:background="#E88418"
                android:padding="5sp">

                <TextView
                    android:id="@+id/txtForHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:text="Other information"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgForEditAddInfo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="30sp"
                    android:layout_toRightOf="@+id/txtForHeading"
                    android:background="@drawable/edit_info" />

                <TextView
                    android:id="@+id/txtForAddInfoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtForHeading"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="4sp"
                    android:gravity="left"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtForHeadingDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtForAddInfoDesc"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="8sp"
                    android:text="Contact information"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgForEditDescInfo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/txtForAddInfoDesc"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="8sp"
                    android:layout_toRightOf="@+id/txtForHeadingDesc"
                    android:background="@drawable/edit_info" />

                <TextView
                    android:id="@+id/txtForInfoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtForHeadingDesc"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="4sp"
                    android:gravity="left"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/txtForHeadingAllergies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtForInfoDesc"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="8sp"
                    android:text="Allergies"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgForEditAllegInfo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/txtForInfoDesc"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="8sp"
                    android:layout_toRightOf="@+id/txtForHeadingAllergies"
                    android:background="@drawable/edit_info" />

                <TextView
                    android:id="@+id/txtForInfoAlleg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtForHeadingAllergies"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="4sp"
                    android:gravity="left"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutForAbsenceNotes1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutForAbsenceNotes"
                android:layout_marginTop="10dp"
                android:background="#E88418"
                android:padding="5sp">

                <ImageView
                    android:id="@+id/imgAtt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:background="@drawable/absent_note" />

                <TextView
                    android:id="@+id/Absence_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@+id/imgAtt"
                    android:text="Absence notes"
                    android:textColor="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:text=">"

                    android:textColor="#fff"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutForAbsenceNotes2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutForAbsenceNotes1"
                android:layout_marginTop="10dp"
                android:background="#E88418"
                android:padding="5sp">

                <ImageView
                    android:id="@+id/imgAtt1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/retrieval_note" />

                <TextView
                    android:id="@+id/Retriever_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@+id/imgAtt1"
                    android:text="Retriever notes"
                    android:textColor="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:text=">"
                    android:textColor="#fff"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutForAbsenceNotes3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutForAbsenceNotes2"
                android:layout_marginTop="10dp"
                android:background="#E88418"
                android:padding="5sp">

                <ImageView
                    android:id="@+id/imgAtt2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="2sp"
                    android:background="@drawable/notehistory" />

                <TextView
                    android:id="@+id/Notes_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@+id/imgAtt2"
                    android:text="Notes history"
                    android:textColor="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:text=">"
                    android:textColor="#fff"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutForRT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutForAbsenceNotes3"
                android:layout_marginTop="10dp"
                android:background="#E88418"
                android:padding="5sp">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retrival Times"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtForRetDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layoutForTimeBox"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt1"
                    android:layout_marginTop="7sp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtDrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DropOff"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/txtForDropOff"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/txtDrop"
                            android:background="#fff"
                            android:focusable="false"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="HH:mm"
                            android:textColor="@color/grey"
                            android:textColorHint="#666666"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtRet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Retrival"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/txtForRetrieval"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/txtRet"
                            android:background="#fff"
                            android:focusable="false"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="HH:mm"
                            android:textColor="@color/grey"
                            android:textColorHint="#666666"
                            android:textSize="13sp" />

                    </RelativeLayout>
                    <Button
                        android:id="@+id/btnForUpdateDropOffTime"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/txtForRetrieval"
                        android:layout_marginTop="20dp"
                        android:background="@color/btn_white_trans"
                        android:text="Update"
                        android:textColor="#fff" />
                </LinearLayout>

               <!-- <Button
                    android:id="@+id/btnForUpdateDropOffTime"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/layoutForTimeBox"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/btn_white_trans"
                    android:text="Update"
                    android:textColor="#fff" />-->
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutForRDays"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutForRT"
                android:layout_marginTop="10dp"
                android:background="#E88418"
                android:padding="5sp">

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absence Days"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtForplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/txt2"
                    android:text="+"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/listViewForAbsenceDays"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt2"
                    android:layout_marginTop="10sp"></ListView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutForRHistory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutForRDays"
                android:layout_marginTop="10dp"
                android:background="#E88418"
                android:padding="5sp">

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retriever notes"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/listViewForRHistory"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt3"
                    android:layout_marginTop="10sp"
                    android:divider="@null">

                </ListView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layoutForAddInfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffd2a1"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="5sp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#c46908"

            android:padding="5dp">

            <TextView
                android:id="@+id/tv_header_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Information"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="2dp"
                android:padding="5dp"/>

            <RelativeLayout
                android:layout_below="@+id/tv_header_popup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#c46908"
                android:padding="5sp">

                <EditText
                    android:id="@+id/edtForOtherInfo"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#fff"
                    android:ems="5"
                    android:gravity="top|left"
                    android:padding="5dp"
                    android:textColor="#666666"
                    />

                <Button
                    android:id="@+id/btnForSave"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/edtForOtherInfo"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/btn_white_trans"
                    android:textColor="#fff"
                    android:text="Save"
                    android:padding="5dp"/>

                <Button
                    android:id="@+id/btnForCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/edtForOtherInfo"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/btnForSave"
                    android:background="@color/btn_white_trans"
                    android:textColor="#fff"
                    android:text="Cancel"
                    android:padding="5dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutForAttListEdit"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:padding="5sp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#c46908"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#f68c19"
                android:padding="5sp">

                <TextView
                    android:id="@+id/txtForFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From" />

                <TextView
                    android:id="@+id/edtForFrom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtForFrom"
                    android:background="#fff"
                    android:padding="5sp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/txtForTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtForFrom"
                    android:layout_marginTop="5dp"
                    android:text="To" />

                <TextView
                    android:id="@+id/edtForTo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtForTo"
                    android:background="#fff"
                    android:padding="5sp"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btnForSave2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/edtForTo"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ab5c07"
                    android:text="Save" />

                <Button
                    android:id="@+id/btnForCancel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtForTo"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/btnForSave2"
                    android:background="#ab5c07"
                    android:text="Cancel" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>