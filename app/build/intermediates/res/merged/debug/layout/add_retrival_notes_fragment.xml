<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/retrival_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#F68C19">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtForUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layoutForEdts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtForUserName"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date:"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/txtForDateFrom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="YYYY-MM-DD"
                        android:textColor="#88888E"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/To"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To:"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/txtForToDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:inputType="text"
                        android:padding="7dp"
                        android:text="YYYY-MM-DD"
                        android:textColor="#88888E"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutForEdts"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="18.20"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Retriever Name:"
                        android:textColor="#fff" />

                    <EditText
                        android:id="@+id/edtForRname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="#fff"
                        android:inputType="text"
                        android:padding="7dp"
                        android:textColor="#88888E"
                        android:textColorHint="#999999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Contact Details:"
                        android:textColor="#fff" />

                    <EditText
                        android:id="@+id/edtForContact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="#fff"
                        android:inputType="text"
                        android:padding="7dp"
                        android:textColor="#88888E"
                        android:textColorHint="#999999"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:orientation="vertical"
                    android:padding="5sp">

                    <TextView
                        android:id="@+id/Portrait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="Portrait:"
                        android:textColor="#fff" />

                    <RelativeLayout
                        android:layout_width="94dp"
                        android:layout_height="94dp"
                        android:layout_marginTop="10sp"
                        android:background="#000"
                        android:gravity="center"
                        android:padding="5sp">

                        <ImageView
                            android:id="@+id/profileImage"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/manjit" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="Description:"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#fff"
                    android:ems="10"
                    android:gravity="top|left"
                    android:hint="Enter note here......"
                    android:inputType="textMultiLine"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    android:textColor="#88888E"
                    android:textColorHint="#999999"
                    android:textSize="12sp"></EditText>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/layout3"
                android:padding="5dp">

                <Button
                    android:id="@+id/btnForSave"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="#F9B063"
                    android:text="Save"
                    android:textColor="#fff" />



                <Button
                    android:id="@+id/btnForCancel"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:background="#F9B063"
                    android:text="Cancel"
                    android:textColor="#fff" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>