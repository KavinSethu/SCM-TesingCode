<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ED75AB"
    >

    <TextView
        android:id="@+id/selectgrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:text="Select Group"
        android:textColor="#ffffff"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/grps"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/selectgrp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="Select Groups"
        android:textColor="#848484"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/selectstd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grps"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="Student Selected"
        android:textColor="#ffffff"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/Studnts"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/selectstd"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="All"
        android:textColor="#848484"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/selectcur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Studnts"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="Curriculum_Tags"
        android:textColor="#ffffff"
        android:textSize="21dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/selectcur"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:popupBackground="#ffffff" />

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="From"
            android:textColor="#ffffff"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="To"
            android:textColor="#ffffff"
            android:textSize="21dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/timePicker1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_weight="50"
            android:background="#fff"
            android:gravity="center"
            android:textColor="#848484"
            android:text="YYYY-MM-DD"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/timePicker2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="50"
            android:background="#fff"
            android:gravity="center"
            android:text="YYYY-MM-DD"
            android:textColor="#848484"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="100" >

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="1dp"
            android:layout_weight="50"
            android:background="#ffffff"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="#848484"
            android:textSize="22dp" />

        <Button
            android:id="@+id/Submit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="50"
            android:background="#ffffff"
            android:gravity="center"
            android:text="Done"
            android:textColor="#848484"
            android:textSize="22dp" />
    </LinearLayout>

</RelativeLayout>