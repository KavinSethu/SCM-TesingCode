<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_absent_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/absence_note"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pnf.elar.app.activity.schedule.ViewAbsentNoteActivity">

    <ImageView
        android:id="@+id/closeAbsImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/cross"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/closeAbsImage"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <TextView
            android:id="@+id/headerAbsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nameAbsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerAbsText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
android:text=""
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/desclabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameAbsText"
            android:layout_marginTop="10dp"
            android:text="Description : "
            android:textColor="@color/white"
            android:textSize="14sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/descAbsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameAbsText"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/desclabelText"

            android:text=""
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/writtenText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descAbsText"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/writtenLabelText"
            android:text=""

            android:textColor="@color/white" />

        <TextView
            android:id="@+id/writtenLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/writtenText"
            android:text="Wrriten By   : "
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/deleteImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_delete"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />
</RelativeLayout>
