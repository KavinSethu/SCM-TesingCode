            <Button
                android:id="@+id/selectedgroup"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:layout_weight="10"
                android:text="Selected Group"
                android:background="@drawable/s_bck"
                android:dropDownWidth="fill_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:textColor="#696969" />

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:focusable="true"
                android:fontFamily="opensansregular.ttf"
                android:gravity="center_vertical"
                android:hint="News title here"
               android:textColor="#8FA2AD"
                android:inputType="textMultiLine|textCapSentences"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:textColorHint="#8FA2AD" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#C8C8C8" >
            </RelativeLayout>

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#8FA2AD"
                android:background="#fff"
                android:fontFamily="opensansregular.ttf"
                android:gravity="top|left"
                android:hint="News description here"
                android:inputType="textMultiLine|textCapSentences"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:textColorHint="#8FA2AD" />

            

