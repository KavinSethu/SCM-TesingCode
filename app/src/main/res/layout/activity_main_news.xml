            <!--                 android:textColor="#696969" /> -->

            <Button
                android:id="@+id/grpspin"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:background="@drawable/s_bck"
                android:dropDownWidth="fill_parent"
                android:focusable="true"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="Select Groups"
                android:textColor="#88888E" />

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:focusable="true"
                android:fontFamily="opensansregular.ttf"
                android:gravity="center_vertical"
                android:hint="News title here"
                android:inputType="textMultiLine|textCapSentences"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:textColor="#88888E"
                android:textColorHint="#88888E" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#C8C8C8"></RelativeLayout>

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#fff"
                android:fontFamily="opensansregular.ttf"
                android:gravity="top|left"
                android:hint="News description here"
                android:inputType="textMultiLine|textCapSentences"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:textColor="#88888E"
                android:textColorHint="#88888E" />

            <LinearLayout
                android:id="@+id/linr2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chck"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/uncheck" />

                <TextView
                    android:id="@+id/Notify_by_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="opensansregular.ttf"
                    android:text="Notify by mail"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--             <ListView -->
            <!--                 android:id="@+id/list1" -->
            <!--                 android:layout_width="match_parent" -->
            <!--                 android:layout_height="wrap_content" -->
            <!--                 android:layout_below="@+id/linr2" -->
            <!--                 android:layout_marginLeft="15dp" -->
            <!--                 android:layout_marginRight="15dp" -->
            <!--                 android:layout_marginTop="30dp" -->
            <!--                 android:cacheColorHint="#00000000" -->
            <!--                 android:divider="#00000000" -->
            <!--                 android:isScrollContainer="false" /> -->
            <ListView
                android:id="@+id/im_vdo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linr2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:cacheColorHint="#00000000"
                android:divider="#00000000"
                android:dividerHeight="5dp"
                android:isScrollContainer="false" />

            <LinearLayout
                android:id="@+id/upload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/upload"
                android:gravity="center_horizontal|center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/gallery" />

                <TextView
                    android:id="@+id/spn4"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="Attach file"
                    android:textColor="#fff"
                    android:textSize="16dp" />
            </LinearLayout>

            <Button
                android:id="@+id/publish"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="#23A3B5"
                android:gravity="center"
                android:text="Publish"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

