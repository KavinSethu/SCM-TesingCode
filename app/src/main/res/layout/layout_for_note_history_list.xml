<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F68C19" >

    <RelativeLayout
        android:id="@+id/layoutForRetrievalNotes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#EA8517"
        android:padding="5sp" >

        <RelativeLayout
            android:id="@+id/layoutForRetriver"
            android:layout_width="70sp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtForDateF"
            android:layout_marginTop="5sp"
            android:background="#D27813" >

            <ImageView
                android:id="@+id/imageForRetriver"
                android:layout_width="65sp"
                android:layout_height="65dp"
                android:background="@drawable/manjit"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtForHeadingMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="Retriever Note"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/txtForHeading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtForHeadingMain"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:text="Retriever Name:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/txtForDateF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/txtForRetrievrName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtForHeading1"
            android:layout_marginLeft="5sp"
            android:textSize="12sp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/txtForHeading3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtForRetrievrName"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:text="Contact details"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/txtForContactDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtForHeading3"
            android:layout_marginLeft="5sp"
            android:textSize="12sp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/txtForHeading4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtForContactDetail"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:text="Descrption:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/txtForDescrption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtForHeading4"
            android:layout_marginLeft="5sp"
            android:textSize="12sp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/txtForDescrption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtForDescrption"
            android:layout_marginLeft="5sp"
            android:textSize="12sp"
            android:textColor="#fff"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutForRetrievalNotes"
        android:layout_marginTop="10dp"
        android:background="#E88418"
        android:padding="5sp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txtForHeading12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="Absent Note"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/txtForTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5sp"
            android:text="2015-11-06"
            android:textSize="12sp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/txtForHeading44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtForHeading12"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:text="Descrption:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/txtForDescrption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtForHeading44"
            android:layout_marginLeft="5sp"
            android:text="--------------"
            android:textSize="12sp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/txtForDescrption22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtForDescrption1"
            android:layout_marginLeft="5sp"
            android:text="--------------"
            android:textSize="12sp"
            android:textColor="#fff"/>
    </RelativeLayout>

</RelativeLayout>