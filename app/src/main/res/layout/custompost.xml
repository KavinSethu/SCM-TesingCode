<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ED74A9">

        <TextView
            android:id="@+id/catagry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="rahul sharma"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textIsSelectable="true"
            />

        <TextView
            android:id="@+id/belowfirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/catagry"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="rahul sharma"
            android:textColor="#ffffff"
            android:textSize="11dp"
            android:textStyle="bold"
            android:textIsSelectable="true"
            />

        <ImageView
            android:id="@+id/curriculm_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="55dp"
            android:background="@drawable/curriculum" />

        <ImageView
            android:id="@+id/pen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/edit" />
    </RelativeLayout>

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:text="dfghdfhdrfhd"
        android:textColor="#88888E"
        android:textSize="13dp"
        android:textIsSelectable="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/des"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/imageview_slider"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/des"
        android:layout_marginTop="8dp"
       >

        <android.support.v4.view.ViewPager
            android:id="@+id/intro_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="8dp"
            android:paddingTop="6dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vedio_sliders"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/imageview_slider"
        android:layout_marginTop="8dp"
    >

        <android.support.v4.view.ViewPager
            android:id="@+id/intro_pagertwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicatortwo"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:paddingTop="6dp" />
    </RelativeLayout>

    <!--     <Spinner -->
    <!--       android:id="@+id/spinner" -->
    <!--       android:layout_width="match_parent" -->
    <!--       android:layout_height="35dp" -->
    <!--       android:layout_marginRight="10dp" -->
    <!--       android:layout_marginLeft="10dp" -->
    <!--       android:layout_marginTop="5dp" -->
    <!--       android:layout_below="@+id/vedio_sliders" -->
    <!--       android:background="#ffffff" -->
    <!--       android:popupBackground="#ffffff" -->
    <!--      /> -->

    <ImageView
        android:id="@+id/rndm"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/vedio_sliders"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rndm" />

    <TextView
        android:id="@+id/random1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vedio_sliders"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/rndm"
        android:gravity="center_vertical"
        android:textColor="#88888E"
        android:textSize="16dp"
        android:textStyle="bold"

        />


    <!-- <ListView -->
    <!-- android:id="@+id/random" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" -->
    <!-- android:layout_below="@+id/vedio_sliders" -->
    <!-- android:isScrollContainer="false" -->
    <!-- android:cacheColorHint="#00000000" -->
    <!-- android:divider="#00000000" -->


    <!-- /> -->


    <LinearLayout
        android:id="@+id/likess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rndm"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/immm"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/like1" />


        <TextView
            android:id="@+id/likecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="8dp"
            android:text="0"
            android:textColor="#88888E"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>