<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#fff" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F68C19"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/catagry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="rahul sharma"
             android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/belowfirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/catagry"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="4dp"
            android:text="rahul sharma"
            android:textColor="#fff"
            android:textSize="11dp"
            android:textStyle="bold"
            android:textIsSelectable="true"
            />

        <ImageView
            android:id="@+id/speech"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"

            android:layout_alignParentRight="true"
             android:layout_marginRight="45dp"
            android:visibility="gone"
            android:background="@drawable/audio" />

        <ImageView
            android:id="@+id/pen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"

            android:background="@drawable/editing" />
    </RelativeLayout>

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:text="dfghdfhdrfhd"
        android:textSize="13dp"
         android:textColor="#88888E"
        android:textIsSelectable="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/des"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/imageview_slider"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/des"
        android:background="#E6E6E6"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/intro_pager"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_height="match_parent" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="25dp"
android:layout_below="@+id/intro_pager"


 />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vedio_sliders"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/imageview_slider"
        android:layout_marginTop="8dp" >

        <android.support.v4.view.ViewPager
            android:id="@+id/intro_vedio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher"
             />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicatortwo"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:paddingTop="6dp" />
    </RelativeLayout>

  <ImageView
        android:id="@+id/rndm"
        android:layout_below="@+id/vedio_sliders"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:background="@drawable/rndm"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/random1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="12dp"
        android:textColor="#88888E"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/rndm"
        android:layout_below="@+id/vedio_sliders"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="15dp"
        />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
         android:layout_below="@+id/random1"
         android:id="@+id/likess"
         android:layout_marginLeft="15dp"
         android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/immm"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="@drawable/like1"
            android:layout_marginBottom="5dp"
            />


        <TextView
            android:id="@+id/likecount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="000000"
            android:textColor="#88888E"
            android:layout_marginLeft="8dp"
            android:layout_gravity="bottom"/>
    </LinearLayout>

</RelativeLayout>